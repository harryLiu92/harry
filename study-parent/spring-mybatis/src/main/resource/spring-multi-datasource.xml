<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSource0" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="${driver}"/>
        <property name="url" value="${url0}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
    </bean>

    <bean id="dataSource1" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="${driver}"/>
        <property name="url" value="${url1}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
    </bean>

    <bean id="dataSource2" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="${driver}"/>
        <property name="url" value="${url2}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
    </bean>

	<bean id="dynamicDataSource" class="com.liuhao.mybatis.sharding.DynamicDataSource">
		<property name="targetDataSources">
			<!-- 标识符类型 -->
			<map>
				<entry key="0" value-ref="dataSource0" />
				<entry key="1" value-ref="dataSource1" />
				<entry key="2" value-ref="dataSource2" />
			</map>
		</property>
	</bean>
</beans>